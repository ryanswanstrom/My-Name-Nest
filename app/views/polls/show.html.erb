<% title ApplicationController::Website_name + " | " + @title %>

<div class="span-1"> &nbsp;</div>
<div class="span-12">
  <h4 class="b_txt"><%=h @poll.title %></h4>
 </div>
<div class="span-3 last">
   <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="mynamenest">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
   <iframe src="http://www.facebook.com/plugins/like.php?href=<%= request.url%>&amp;layout=standard&amp;show_faces=false&amp;width=300&amp;action=like&amp;colorscheme=light&amp;height=30" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:300px; height:30px;" allowTransparency="true"></iframe>
</div>

<div class="span-8">
  <% unless @boys.empty? %>
    <h2 class="boy_title">Boy Names</h2>
    <div class="clear">&nbsp;</div>
    <% @boys.each do |bname| %>
      <div class="spaceit">
        <% form_tag( {:action => 'vote_name'}, :multipart => true) do  %>
          <%= hidden_field_tag(:poll_id, @poll.id) %>
          <%= hidden_field_tag(:name_id, bname.id) %>
          <%= submit_tag bname.name, :class => 'b_button' %>
        <% end %>  <%= bname.num_votes%>
      </div>
    <% end %>
  <% end %> &nbsp;
</div>

<div class="span-8 last">
  <% unless @girls.empty? %>
    <h2 class="girl_title">Girl Names</h2>
    <div class="clear">&nbsp;</div>
    <% @girls.each do |gname| %>
      <div class="spaceit">
        <% form_tag( {:action => 'vote_name'}, :multipart => true) do  %>
          <%= hidden_field_tag(:poll_id, @poll.id) %>
          <%= hidden_field_tag(:name_id, gname.id) %>
          <%= submit_tag gname.name, :class => 'g_button' %>
        <% end %>  <%= gname.num_votes%>
      </div>
    <% end %>
  <% end %> &nbsp;
</div>
<% if @boys.empty? && @girls.empty? %>
  <div class="span-16 last">
    No names have been added
  </div>
<% end %>

<div class="span-1"> &nbsp; </div>
<div class="span-15 last bspaceit">
  <%=h @poll.story %>
</div>