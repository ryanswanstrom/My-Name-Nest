<% title "New Poll" %>

<% form_for :poll, :url => polls_path do |f| %>
  <div class="span-16 last">
    <label for="title">Title </label>
    <%= f.text_field :title%>
  </div>

  <div class="span-8">
    <h2 class="boy_title">Boy Names</h2>
    <div class="clear">&nbsp;</div>
    <% (1..5).each do |i| %>
    <div>
      <%= text_field_tag "name_".concat(i.to_s) , nil, :maxlength => 25 %>
    </div>
    <% end %>
  </div>

  <div class="span-8 last">
    <h2 class="girl_title">Girl Names</h2>
    <div class="clear">&nbsp;</div>
    <% (6..10).each do |i| %>
    <div>
       <%= text_field_tag "name_".concat(i.to_s), nil, :maxlength => 25 %>
    </div>
    <% end %>
  </div>


  <div class="span-16 last">
    <h3 class="b_txt">Story </h3>
    <%= f.text_area( :story, :class => 'span-14', :rows => 3) %>
  </div>
  <div class="span-16 last">
    <input id="submit" name="submit" type="submit" value="Publish" class="b_button"/>
  </div>

<% end %>

<p><%= link_to "Back to List", polls_path %></p>
