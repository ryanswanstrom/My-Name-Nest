<% title "New Poll" %>

<% form_for :poll, :url => polls_path do |f| %>
  <label for="title">Title </label>
  <%= f.text_field :title %>

  <h1>Names</h1>
  <h1>Boy Names</h1>
  <% (1..5).each do |i| %>
    <!--% fields_for "...-*[name_attr][]", i do |name_form| % -->
    <p><%= text_field_tag "name_".concat(i.to_s) %>
  </p>
    <!-- % end % -->
  <% end %>


  <h1>Girl Names</h1>
  <% (6..10).each do |i| %>
    <!--% fields_for "...-*[name_attr][]", i do |name_form| % -->
    <p> <%= text_field_tag "name_".concat(i.to_s) %>
  </p>
    <!-- % end % -->
  <% end %>


  <br />
  <label for="story">Story </label>
  <%= f.text_area( :story, :size =>"124x4") %>

  <br />
  <input id="submit" name="submit" type="submit" value="Submit It"/>

<% end %>

<p><%= link_to "Back to List", polls_path %></p>
